#!/usr/bin/env ruby
# --*-- encoding: utf-8 --*--

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'mrubybuild'

if $0 == __FILE__
  args = nil
  case ARGV.size
  when 1
    args = ARGV[0]
  when 2
    args = ARGV
  else
    args = ['iij/mruby', 'iij']
  end
  m = MrubyBuild.new(*args)
  #m.zipball_path = 'spec/iij.zip'
  m.unzip.build.save
end

